<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Artists</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="Music template project" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/styles/bootstrap-4.1.2/bootstrap.min.css"
    />
    <link
      href="/plugins/font-awesome-4.7.0/css/font-awesome.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="/plugins/OwlCarousel2-2.3.4/owl.carousel.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="/plugins/OwlCarousel2-2.3.4/owl.theme.default.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="/plugins/OwlCarousel2-2.3.4/animate.css"
    />
    <link rel="stylesheet" type="text/css" href="/styles/artists.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/styles/artists_responsive.css"
    />
  </head>
  <body>
    <div class="super_container">
      <!-- Header -->

      <header class="header">
        <div class="container">
          <div class="row">
            <div class="col">
              <div
                class="header_content d-flex flex-row align-items-center justify-content-center"
              >
                <!-- Logo -->
                <div class="logo">
                  <a
                    href="#"
                    class="d-flex flex-row align-items-end justify-content-start"
                  >
                    <span
                      class="logo_bars d-flex flex-row align-items-end justify-content-between"
                      ><span></span><span></span><span></span><span></span
                      ><span></span
                    ></span>
                    <span class="logo_text">music</span>
                  </a>
                </div>

                <!-- Main Navigation -->
                <nav class="main_nav">
                  <ul class="d-flex flex-row align-items-center justify-content-start large">
                    <li><a href="/">Trang chủ</a></li>
                    <!-- <li><a href="#">Lịch sử</a></li> -->
                    <li><a href="#">Trở về trang trước</a></li>
                  </ul>
                  <ul class="d-flex flex-row align-items-center justify-content-start tiny">
                    <li><a href="/"><i class="fa fa-home"></i> Trang chủ</a></li>
                    <!-- <li><a href="#">Lịch sử</a></li> -->
                    <li><a href="#"><i class="fa fa-arrow-left"></i> Trở lại</a></li>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Menu -->

      <div class="menu">
        <div class="menu_container">
          <div class="menu_background"></div>
          <div class="menu_close">
            <i class="fa fa-times" aria-hidden="true"></i>
          </div>
          <div
            class="menu_content d-flex flex-column align-items-center justify-content-start"
          >
            <nav class="menu_nav">
              <ul
                class="d-flex flex-column align-items-center justify-content-start"
              >
                <li><a href="/">Trang chủ</a></li>
                <!-- <li><a href="#">Lịch sử</a></li> -->
                <li><a href="#">Trở về trang trước</a></li>
              </ul>
            </nav>
          </div>
        </div>
      </div>

      <!-- Home -->

      <div class="home">
        <div
          class="parallax_background parallax-window"
          data-parallax="scroll"
          data-image-src="/images/artists.jpg"
          data-speed="0.8"
        ></div>
        <div class="home_container">
          <div class="container">
            <div class="row">
              <div class="col">
                <div class="home_content text-center">
                  <div class="home_title">Tìm trong kết quả này</div>
                  <div class="current-keyword">
                    Có <%=data.length%> kết quả cho tìm kiếm với các từ khóa sau
                    <div class="show-keyword-box"><a href="#popupkeyword">chi tiết<i class="fa fa-info-circle"></i></a></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Search -->

      <div class="search">
        <div class="container">
          <div class="row">
            <div class="col">
              <div class="search_form_container">
                <form
                  action="/search/byresult"
                  method="POST"
                  class="search_form"
                  id="search_form"
                >
                  <div
                    class="d-flex flex-md-row flex-column align-items-center justify-content-between"
                  >
                    <input
                      type="text"
                      class="search_input"
                      name="main_keyword"
                      placeholder="Từ khóa cần tìm"
                    />
                    <input
                      type="text"
                      name="exclude_keyword"
                      class="search_input"
                      placeholder="Từ khóa loại bỏ"
                    />
                    <button type="submit" class="button search_button">
                      <span>search</span>
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Artists -->
      <%for(let song of data){%>
      <div class="artists" id="<%=song._id%>">
        <div class="artists_container">
          <div class="container">
            <div class="row">
              <div class="col">
                <div class="artist">
                  <div class="row">
                    <!-- Artist Image -->
                    <div class="col-lg-4 col-md-4">
                      <div class="artist_image">
                        <img src="/images/songicon.png" alt="" />
                      </div>
                    </div>

                    <!-- Artist Content -->
                    <div class="col-lg-8 col-md-8 artist_col">
                      <div class="artist_content">
                        <div class="artist_info">
                          <div class="artist_name">
                            <h1><a><%=song._source.song_name%></a></h1>
                          </div>
                          <div class="artist_text">
                            <p>
                              <%=song._source.lyrics%> <% let temp_author = [];
                              for(let i = 0; i < song._source.author.length;
                              i++) {
                              temp_author.push(song._source.author[i].name); }
                              let temp_singer = []; for(let i = 0; i <
                              song._source.singers.length; i++) {
                              temp_singer.push(song._source.singers[i].name); }
                              %>
                            </p>
                          </div>
                          <!-- author and singer -->
                          <div class="author_n_singer">
                            <div>
                              <a>
                                <span class="author_or_singer">Tác giả:</span>
                                <%for(let i = 0; i < song._source.author.length;
                                i++){%> <%if(i == song._source.author.length -
                                1){%>
                                <span><%=song._source.author[i].name%></span>
                                <%}else {%>
                                <span><%=song._source.author[i].name%>, </span>
                                <%}%> <%}%>
                              </a>
                            </div>
                            <div>
                              <a>
                                <span class="author_or_singer">Ca sĩ: </span>
                                <%for(let i = 0; i <
                                song._source.singers.length; i++){%> <%if(i ==
                                song._source.singers.length - 1){%>
                                <span><%=song._source.singers[i].name%></span>
                                <%}else {%>
                                <span><%=song._source.singers[i].name%>, </span>
                                <%}%> <%}%>
                              </a>
                            </div>
                          </div>
                          <button
                            class="show-lyric btn btn-info"
                            onclick="showLyric(`<%=song._id%>`);"
                          >
                            Xem lời bài hát
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%}%>
      <!-- modal hien full lyrics -->
      <div class="modal" id="lyricModal">
        <span class="modal-close" onclick="closeLyric();">&times;</span>
        <div class="modal-content">
          <h2 class="modal-song-name"></h2>
          <div class="modal-author-singer"></div>
          <br />
          Lời bài hát:<br />
          <div class="modal-lyric"></div>
        </div>
        <div class="modal-caption">
          Thông tin bài hát
        </div>
      </div>

      <div id="popupkeyword" class="overlay">
        <div class="popup">
          <a class="close" href="#">&times;</a>
          <div class="row">
              <span class="col-sm-6 info-include">
                  Các từ khóa được tìm kiếm
                </span>
                <span class="col-sm-6 info-exclude">
                  Các từ được loại bỏ
                </span>
          </div>
          <div class="content row">
            <ul class="col-xs-6" style="color:darkgreen">
              <%for(let temp_include of show_include){%>
                <li>
                  <%=temp_include%>
                </li>
              <%}%>
              <!-- disc -->
              </ul>
            <ul class="col-xs-6" style="color:darkred">
              <%for(let temp_exclude of show_exclude){%>
                <li>
                    <%=temp_exclude%>
                  </li>
              <%}%>
            </ul>
          </div>
          <div class="info-songs">
            <div>
              Danh sách các bài hát
            </div>
            <ul>
              <%for(let temp_song of data){%>
              <li>
                <%=temp_song._source.song_name%>
              </li>
              <%}%>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <script>
      document.addEventListener(
        "DOMContentLoaded",
        function() {
          if($(document).width() <= 414) {
            $(document).scrollTop(150);
          }else {
            $(document).scrollTop(100);
          }
          if ($(".current-include span").text().length >= 40) {
            $(".current-include span").text(
              $(".current-include span")
                .text()
                .substr(0, 40) + "..."
            );
            $(".current-keyword i").show();
          }
          if ($(".current-exclude span").text().length >= 40) {
            $(".current-exclude span").text(
              $(".current-exclude span")
                .text()
                .substr(0, 40) + "..."
            );
            $(".current-keyword i").show();
          }
        },
        false
      );
      function showLyric(songId) {
        var modal = document.getElementById("lyricModal");
        modal.style.display = "block";
        $("#lyricModal .modal-song-name").text(
          $("#" + songId)
            .find(".artist_name h1")
            .text()
        );
        $("#lyricModal .modal-author-singer").html(
          $("#" + songId)
            .find(".author_n_singer")
            .html()
        );
        let temp_lyric  =$("#" + songId).find(".artist_text p").text();
        $("#lyricModal .modal-lyric").html(temp_lyric);

      }
      function closeLyric() {
        var modal = document.getElementById("lyricModal");
        modal.style.display = "none";
      }
    </script>
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/styles/bootstrap-4.1.2/popper.js"></script>
    <script src="/styles/bootstrap-4.1.2/bootstrap.min.js"></script>
    <script src="/plugins/greensock/TweenMax.min.js"></script>
    <script src="/plugins/greensock/TimelineMax.min.js"></script>
    <script src="/plugins/scrollmagic/ScrollMagic.min.js"></script>
    <script src="/plugins/greensock/animation.gsap.min.js"></script>
    <script src="/plugins/greensock/ScrollToPlugin.min.js"></script>
    <script src="/plugins/OwlCarousel2-2.3.4/owl.carousel.js"></script>
    <script src="/plugins/jPlayer/jquery.jplayer.min.js"></script>
    <script src="/plugins/jPlayer/jplayer.playlist.min.js"></script>
    <script src="/plugins/easing/easing.js"></script>
    <script src="/plugins/progressbar/progressbar.min.js"></script>
    <script src="/plugins/parallax-js-master/parallax.min.js"></script>
    <script src="/plugins/scrollTo/jquery.scrollTo.min.js"></script>
    <script src="/js/artists.js"></script>
  </body>
</html>
